pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'javac src/**/*.java'
            }
        }
        stage('Unit Test') {
            steps {
                bat 'java org.junit.runner.JUnitCore MyTests'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
        stage('Install') {
            steps {
                bat 'npm install'
            }
        }
        stage('Playwright Test') {
            steps {
                bat 'npx playwright test --reporter=list'
            }
        }
    }
}
