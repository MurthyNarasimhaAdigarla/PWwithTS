pipeline {
    agent any
    stages {
        stage('Build Java') {
            steps {
                bat 'javac src/**/*.java'
            }
        }
        stage('Run JUnit Tests') {
            steps {
                bat 'java org.junit.runner.JUnitCore MyTests'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
        stage('Install Node Modules') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Playwright Tests') {
            steps {
                bat 'npx playwright test --reporter=list'
            }
        }
        stage('Debug') {
            steps {
                bat 'dir'
                bat 'cd'
            }
        }
    }
}
